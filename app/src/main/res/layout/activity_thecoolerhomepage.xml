<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#45818e"
    android:orientation="vertical"
    android:padding="16dp"
    android:id="@+id/main">

    <TextView
        android:id="@+id/budgettext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Budget"
        android:textColor="#FFFFFF"
        android:layout_marginTop="200dp" />

    <EditText
        android:id="@+id/budget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:hint="Budget"
        android:padding="12dp"
        android:textColor="#000000"
        android:layout_marginTop="12dp" />

    <!-- Password Field -->


    <TextView
        android:id="@+id/totalexpensetext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Expense"
        android:textColor="#FFFFFF"
        android:layout_marginTop="12dp"/>

    <EditText
        android:id="@+id/Total_Expenses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:hint="Total Expenses"
        android:padding="12dp"
        android:textColor="#000000"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/remainingbudgettext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remaining Budget"
        android:textColor="#FFFFFF"
        android:layout_marginTop="12dp"/>

    <EditText
        android:id="@+id/Remaining_Budget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Remaining Budget"
        android:background="@android:color/white"
        android:padding="12dp"
        android:textColor="#000000"
        android:layout_marginTop="12dp" />


    <Button
        android:id="@+id/Homepage_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="#ffffff"
        android:text="Back to Home Page"
        android:textColor="#ffffff"
        android:textColorHint="#45818e" />
</LinearLayout>

